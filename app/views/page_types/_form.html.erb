<%= form_for @page_type, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :page_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :page_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number_of_page, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :number_of_page, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                page_types_path, :class => 'btn' %>
  </div>
<% end %>
