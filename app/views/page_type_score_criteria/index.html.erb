<%- model_class = PageTypeScoreCriterium -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:page_type_id) %></th>
      <th><%= model_class.human_attribute_name(:score_criteria_id) %></th>
      <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @page_type_score_criteria.each do |page_type_score_criterium| %>
      <tr>
        <td><%= link_to page_type_score_criterium.id, page_type_score_criterium_path(page_type_score_criterium) %></td>
        <td><%= page_type_score_criterium.page_type.page_type %></td>
        <td><%= page_type_score_criterium.score_criterium.score_criteria %></td>
        <td><%= page_type_score_criterium.score %></td>
        <td><%=l page_type_score_criterium.created_at %></td>
        <td><%= page_type_score_criterium.updated_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_page_type_score_criterium_path(page_type_score_criterium), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      page_type_score_criterium_path(page_type_score_criterium),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_page_type_score_criterium_path,
            :class => 'btn btn-primary' %>
