<%- model_class = CpForeman -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:cell) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cp_foremen.each do |cp_foreman| %>
      <tr>
        <td><%= link_to cp_foreman.id, cp_foreman_path(cp_foreman) %></td>
        <td><%= cp_foreman.first_name %></td>
        <td><%= cp_foreman.last_name %></td>
        <td><%= cp_foreman.email %></td>
        <td><%= cp_foreman.phone %></td>
        <td><%= cp_foreman.cell %></td>
        <td><%=l cp_foreman.created_at %></td>
        <td><%= cp_foreman.updated_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cp_foreman_path(cp_foreman), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cp_foreman_path(cp_foreman),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_cp_foreman_path,
            :class => 'btn btn-primary' %>
