<%- model_class = CpScoreSheetConfig -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:issue_date) %>:</strong></dt>
  <dd><%= @cp_score_sheet_config.issue_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:press_id) %>:</strong></dt>
  <dd><%= @cp_score_sheet_config.press_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @cp_score_sheet_config.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:press_run_id) %>:</strong></dt>
  <dd><%= @cp_score_sheet_config.press_run_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:foreman_id) %>:</strong></dt>
  <dd><%= @cp_score_sheet_config.foreman_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pic_id) %>:</strong></dt>
  <dd><%= @cp_score_sheet_config.pic_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_section) %>:</strong></dt>
  <dd><%= @cp_score_sheet_config.total_section %></dd>
  <dt><strong><%= model_class.human_attribute_name(:color_page_rated) %>:</strong></dt>
  <dd><%= @cp_score_sheet_config.color_page_rated %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bw_page_rated) %>:</strong></dt>
  <dd><%= @cp_score_sheet_config.bw_page_rated %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cp_score_sheet_configs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cp_score_sheet_config_path(@cp_score_sheet_config), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cp_score_sheet_config_path(@cp_score_sheet_config),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
