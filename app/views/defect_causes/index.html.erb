<%- model_class = DefectCause -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:defect_cause) %></th>
      <th><%= model_class.human_attribute_name(:points) %></th>
      <th><%= model_class.human_attribute_name(:score_criterium_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @defect_causes.each do |defect_cause| %>
      <tr>
        <td><%= link_to defect_cause.id, defect_cause_path(defect_cause) %></td>
        <td><%= defect_cause.defect_cause %></td>
        <td><%= defect_cause.points %></td>
        <td><%= defect_cause.score_criterium.score_criteria %></td>
        <td><%=l defect_cause.created_at %></td>
        <td><%=l defect_cause.updated_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_defect_cause_path(defect_cause), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      defect_cause_path(defect_cause),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_defect_cause_path,
            :class => 'btn btn-primary' %>
